<configuration>
    <!-- Appender to log messages to a file -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- Path to the log file -->
        <file>G:/Vodafone/CRs/Seibel-Service/Seibel/In-Progress/app.log</file>

        <!-- Enable append mode to keep existing logs -->
        <append>true</append>

        <encoder>
            <!-- Log pattern for file logs -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <!-- Attach the file appender to the root logger -->
        <appender-ref ref="FILE"/>
    </root>

</configuration>
